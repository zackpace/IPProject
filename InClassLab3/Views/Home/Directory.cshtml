
@model InClassLab3.Models.MainViewModel

@{
    ViewBag.Title = "Directory";
}

<div class="row">
    <div class="col-md-6">
        <h2>Branches</h2>
        <table class="table table-hover table-striped">
            @if (model.Branches.Any())
            {
                foreach (var branch in model.Branches)
                {
                    <tr>
                        <td>@branch.Name</td>
                   
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">No Branch found</td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-6">
        <h2>People</h2>
        <table class="table table-hover table-striped">
            @if (Model.Person.Any())
            {
                foreach (var person in Model.Person)
                {
                    <tr>
                        <td>@person.FirstName</td>
                        <td>@person.LastName</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">No People found</td>
                </tr>
            }
        </table>
    </div>
    </div>
